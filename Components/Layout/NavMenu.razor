@using Microsoft.AspNetCore.Identity
@inject NavigationManager NavigationManager
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject CarritoService carritoService

<nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm py-3">
    <div class="container">
        <!-- Logo + Nombre -->
        <a class="navbar-brand d-flex align-items-center fw-bold fs-3 text-primary" href="/">
            <img src="/imagen/LOGO.PNG" alt="VRLOGO" style="width: 50px; height: 50px; margin-right: 10px;" />
            <span class="text-dark">VRJewelry</span>
        </a>

        <!-- Botón para móviles -->
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain"
                aria-controls="navbarMain" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon" style="filter: invert(1);"></span>
        </button>

        <!-- Menú -->
        <div class="collapse navbar-collapse" id="navbarMain">
            <AuthorizeView>
                <Authorized Context="authContext">
                    <ul class="navbar-nav ms-auto align-items-center">
                        <li class="nav-item disabled"></li>

                        <li class="nav-item">
                            <NavLink class="nav-link text-dark d-flex align-items-center" href="/">
                                Home
                            </NavLink>
                        </li>

                        @if (authContext.User.Identity.IsAuthenticated && authContext.User.IsInRole("cliente"))
                        {
                            <li class="nav-item">
                                <NavLink class="nav-link text-dark" href="/Carrito/Checkout">
                                    <div class="row">
                                        <div class="col">Carrito</div>
                                        <div class="col"><span class="badge text-bg-dark">@(Carrito?.Detalles.Count)</span></div>
                                    </div>
                                </NavLink>
                            </li>
                        }

                        @if (authContext.User.Identity.IsAuthenticated && authContext.User.IsInRole("admin"))
                        {
                            <li class="nav-item">
                                <NavLink class="nav-link text-dark" href="/Clientes/Index">
                                    Clientes
                                </NavLink>
                            </li>

                            <li class="nav-item">
                                <NavLink class="nav-link text-dark" href="/Admins/Index">
                                    Admins
                                </NavLink>
                            </li>

                            <li class="nav-item">
                                <NavLink class="nav-link text-dark" href="/Productos/Index">
                                    Productos
                                </NavLink>
                            </li>
                        }

                        <AuthorizeView Roles="Admin">
                            <Authorized Context="adminContext">
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle text-dark" href="#" id="adminDropdown" role="button"
                                       data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="bi bi-shield-lock-fill me-1"></i> Admin
                                    </a>
                                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="adminDropdown">
                                        <li>
                                            <NavLink class="dropdown-item" href="/VRJewelry/Productos/Index">
                                                <i class="bi bi-box-seam me-2"></i> Inventario
                                            </NavLink>
                                        </li>
                                        <li>
                                            <NavLink class="dropdown-item" href="/Usuarios">
                                                <i class="bi bi-people me-2"></i> Usuarios
                                            </NavLink>
                                        </li>
                                    </ul>
                                </li>
                            </Authorized>
                        </AuthorizeView>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle d-flex align-items-center text-dark" href="#" id="userDropdown"
                               role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-person-circle fs-4 me-2"></i>
                                <span class="fw-semibold">@nickName</span>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end shadow-sm" aria-labelledby="userDropdown" style="min-width: 200px;">
                                <li>
                                    <form action="Account/Logout" method="post" class="p-2">
                                        <AntiforgeryToken />
                                        <input type="hidden" name="ReturnUrl" value="@currentUrl" />
                                        <button type="submit" class="btn btn-outline-danger w-100 d-flex align-items-center justify-content-center">
                                            <i class="bi bi-box-arrow-right me-2"></i> Salir
                                        </button>
                                    </form>
                                </li>
                            </ul>
                        </li>

                    </ul>
                </Authorized>

                <NotAuthorized>
                    <ul class="navbar-nav ms-auto gap-2">
                        <li class="nav-item disabled"></li>

                        <li class="nav-item">
                            <NavLink class="nav-link text-dark d-flex align-items-center" href="/">
                                Home
                            </NavLink>
                        </li>

                        <li class="nav-item">
                            <NavLink class="nav-link text-dark" href="/Carrito/Checkout">
                                <div class="row">
                                    <div class="col">Carrito</div>
                                    <div class="col"><span class="badge text-bg-dark">@(Carrito?.Detalles.Count)</span></div>
                                </div>
                            </NavLink>
                        </li>

                        <li class="nav-item">
                            <NavLink class="nav-link text-dark" href="Account/Login">
                                Login
                            </NavLink>
                        </li>
                        <li class="nav-item">
                            <NavLink class="nav-link text-dark" href="Account/Register">
                                Registrar
                            </NavLink>
                        </li>

                        <li class="nav-item disabled"></li>
                    </ul>
                </NotAuthorized>
            </AuthorizeView>
        </div>
    </div>
</nav>


@code {
    private string? currentUrl;
    private string? nickName = "Usuario";
    public Carrito? Carrito { get; set; }


    protected override async Task OnInitializedAsync()
    {

        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;

        try
        {
            Carrito = await carritoService.ObtenerCarritoAsync();
        }
        catch (NullReferenceException e)
        {
            Console.WriteLine("El usuario loggeado no es un cliente.");
        }

        if (user.Identity?.IsAuthenticated ?? false)
        {
            nickName = user.Identity.Name ?? "Usuario";
        }

        currentUrl = NavigationManager.ToBaseRelativePath(NavigationManager.Uri);
    }
}
